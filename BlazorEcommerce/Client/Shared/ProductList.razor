@inject HttpClient Http

@foreach (var product in Products)
    {
        <MudStack Spacing="4">
            <MudPaper Class="pa-4">
                <MudStack Row="true">
                    <MudImage Src="@product.ImageUrl" Width="200" Height="300" Alt="@product.Title" Elevation="25" />
                    <MudStack Justify="Justify.Center" Spacing="0">
                        <MudLink Href="#" Typo="Typo.h4">
                            @product.Title
                        </MudLink>
                        <MudText Typo="Typo.body2">@product.Description</MudText>
                        <MudText Typo="Typo.h6">
                            $@product.Price
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudStack>
        
    }

@code {
    private static List<Product> Products = new List<Product>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<Product>>("api/product");
        if (result is not null)
            Products = result;
    }
}
